<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">
    <include
        android:id="@+id/include"
        layout="@layout/control_toolbar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Event type"
        android:textColor="@color/base_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:shadowMargin="10dp"
        app:shadowRadius="10dp">

        <LinearLayout
            android:id="@+id/taskMenu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:id="@+id/btnWeatherTask"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:contentDescription="Weather"
                    android:src="@drawable/sunny"
                    app:tint="@color/primary_900" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="When weather changes"
                        android:textColor="@color/base_900"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Example: when local temperature is greater than 28 Â°C"
                        android:textColor="@color/base_500"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:contentDescription="Weather"
                    android:src="@drawable/right"
                    app:tint="#7B7B7B" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLocationTask"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:contentDescription="When location changes"
                    android:gravity="start"
                    android:src="@drawable/map"
                    app:tint="@color/primary_900" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="When location changes"
                        android:textColor="@color/base_900"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Example: after you leave home"
                        android:textColor="@color/base_500"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:contentDescription="Location"
                    android:gravity="end"
                    android:src="@drawable/right"
                    app:tint="#7B7B7B" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSheduledTask"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:contentDescription="Schedule"
                    android:gravity="start"
                    android:src="@drawable/time"
                    app:tint="@color/primary_900" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Schedule"
                        android:textColor="@color/base_900"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Example: 7:00 AM every morning"
                        android:textColor="@color/base_500"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:contentDescription="Schedule"
                    android:gravity="end"
                    android:src="@drawable/right"
                    app:tint="#7B7B7B" />
            </LinearLayout>
        </LinearLayout>
    </com.loopeer.shadow.ShadowView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigatin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/button_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>